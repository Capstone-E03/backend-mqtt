PORT=4000
CORS_ORIGIN=http://localhost:3000

# === Connection Mode Configuration ===
# MQTT: Enable/disable MQTT connection (default: true)
USE_MQTT=true
# Serial: Enable/disable Serial port connection (default: false)
USE_SERIAL=false

# === MQTT Configuration (when USE_MQTT=true) ===
MQTT_URL=mqtt://test.mosquitto.org:1883
MQTT_SUB_TOPICS=stm32/sensor/data,capstone/e03/fish,capstone/e03/preservation

# === Serial Port Configuration (when USE_SERIAL=true) ===
# Linux/Mac: /dev/ttyUSB0, /dev/ttyACM0, /dev/ttyS0
# Windows: COM3, COM4, etc.
SERIAL_PORT=/dev/ttyUSB0
SERIAL_BAUD_RATE=115200

# === Database ===
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/mqtt_data

# === AI Chatbot (Optional) ===
OPENROUTER_API_KEY="sk-or-your-key-here"
OPENROUTER_MODEL="openai/gpt-3.5-turbo"
PROJECT_URL="http://localhost:3000"

